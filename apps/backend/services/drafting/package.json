{
    "name": "direct-message-service",
    "version": "1.0.0",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "test": "jest --testPathPattern=tests/unit",
        "postbuild": "copyfiles -u 1 \"src/**/*.{json,sql,csv}\" dist/",
        "start": "node dist/app.js",
        "dev": "nodemon --watch src --exec 'npm run build && node dist/src/app.js'",
        "migrate": "npx drizzle-kit generate",
        "seed": "npx node dist/infrastructure/database/seeds/seed.js"
    },
    "dependencies": {
        "@socket.io/redis-adapter": "^8.3.0",
        "@testcontainers/postgresql": "^10.15.0",
        "cors": "^2.8.5",
        "csv-parser": "^3.0.0",
        "dotenv": "^16.4.5",
        "drizzle-kit": "^0.26.2",
        "drizzle-orm": "^0.35.2",
        "express": "^4.21.0",
        "pg": "^8.13.0",
        "redis": "^4.7.0",
        "socket.io": "^4.8.0",
        "socket.io-redis": "^6.1.1",
        "ts-jest": "^29.2.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.6.1",
        "@types/pg": "^8.11.10",
        "@types/socket.io": "^3.0.2",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "copyfiles": "^2.4.1",
        "drizzle-kit": "^0.26.2",
        "esbuild": "0.24.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "testcontainers": "^10.15.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    }
}