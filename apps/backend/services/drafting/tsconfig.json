{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist" // Make sure this matches your build output directory
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
